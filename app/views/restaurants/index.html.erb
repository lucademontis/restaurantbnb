
<div class="container">

  <% if @current_user != nil %>
    <h2> We found <%= @restaurants.count %> restaurants for you <%= current_user.name %> </h2>
  <% else %>
    <h2> We found <%= @restaurants.count %> restaurants for you </h2>
  <% end %>

  <div class="row">
      <%= render :partial => 'pages/form' %>
  </div>
  <br>
    <div class="column">
      <% @restaurants.each do |restaurant| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('<%= restaurant.photo_url %>');">
          <div class="card-title-wrapper">
            <h2> <%= restaurant.name.upcase %></h2>
          </div>
          <div class="card-category"> <%= restaurant.category.capitalize %></div>
            <div class="card-description">
              <p> <i class="fas fa-euro-sign"></i> <%= restaurant.price %> /day /pers</p>
              <p><i class="fas fa-map-marker"></i> <%= restaurant.address %> </p>
            </div>
            <%= link_to "", restaurant_path(restaurant), class: "card-link" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <br>
    <div class="container">
      <div class="column">
        <div class="row">
          <div class="row">
            <div class="map">
                <div
                  id="map"
                  style="width: 100%;
                  height: 500px;"
                  data-markers="<%= @markers.to_json %>"
                ></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>



    <div class="banner banner-show-rest">
      <%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>
</div>
